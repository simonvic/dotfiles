configuration{
	show-icons: false;
}

@import "styles/minimal"

window {
	width: 500px;
	location: north;
	anchor: north west;
	x-offset: 260px;
	y-offset: 65px;
}

mainbox {
	children: [listview,inputbar];
}

listview {
	children: [element];
	columns: 1;
	fixed-columns: true;
	lines: 10;
	fixed-height: false;
	spacing: 1%;
	padding: 2%;
}


element {
	border-radius: 10px;
	padding: 10px;
}

element-text {
	font: @font-primary-small;
}
